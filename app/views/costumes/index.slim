doctype html
html
  head
    meta charset="utf-10"
    meta name="viewport" content="width=device-width, initial-scale=1"
    title traclo
  body
    div class="has-background-light"
      header
        h1 class="title" traclo
      container
        div class="columns"
          div class="column is-2"
            ul
              li アジア
              li オセアニア
              li 北アメリカ
              li 南アメリカ
              li アフリカ
              li ヨーロッパ
          div class="column is-10"
            - @costumes.in_groups_of(4, false) do |costumes|
              div class="search-results__results-container columns"
                - costumes.each do |costume|
                  div class="search-results__results-item column is-one-quarter"
                    a href="#{costume.object_url}"
                    div class="search-results__results-image"
                      = image_tag(costume.primary_image, width: 260, class: 'result-image')
                    div class="search-results__results-title"
                      = costume.title
                    div class="search-results__results-culture"
                      - if costume.culture.present?
                        = costume.culture
                      - else
                        = costume.country + ' ' + costume.region

